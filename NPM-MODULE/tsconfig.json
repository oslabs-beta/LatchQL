{
  "compilerOptions": {
    "target": "es2017",
    "types":["node", "jest"],
    "module": "ES2022",
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "outDir": "./lib",
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "paths": {
      "*": ["/node_modules/*"]
    },
    // "allowJs": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
